{
	"env": {
		"es2022": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": 0,
		"quotes": ["error", "double"],
		"semi": ["error", "never"],
		"no-explicit-any": "off",
		"line-br": "off",
		"comma-dangle": "off"
	}
}
